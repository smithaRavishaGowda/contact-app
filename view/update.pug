doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css")
    body 
        nav.navbar.navbar-expand-md.navbar-dark.bg-success
            .container 
                a.navbar-brand(href="/") PUG-Crud 
                button.navbar-toggler(data-bs-toggle="collapse",data-bs-target="#menu")
                    span.navbar-toggler-icon 
                .collapse.navbar-collapse#menu 
                    ul.navbar-nav 
                        li.nav-item 
                            a.nav-link(href="/") Home 
                        li.nav-item 
                            a.nav-link(href="/create") Create

        .container 
            .row 
                .col-md-12.text-center 
                    h3.display-3.text-success Update Contact 
            .row 
                .col-md-6.offset-md-3 
                    .card
                        .card-body
                            form(autocomplete="off",method="post",onsubmit="submitHandler(event)")
                                .form-group.mt-2 
                                    label(for="name") Name 
                                    input.form-control(type="text", name="name", id="name", required, placeholder="Enter name")
                                .form-group.mt-2 
                                    label(for="email") Email 
                                    input.form-control(type="email", name="email", id="email", required, placeholder="Enter email")
                                .form-group.mt-2 
                                    label(for="mobile") Mobile 
                                    input.form-control(type="number", name="mobile", id="mobile", required, placeholder="Enter mobile")
                                .form-group.mt-2 
                                    label(for="website") Website 
                                    input.form-control(type="url", name="website", id="website", required, placeholder="http://xyz.com")
                                .form-group.mt-2 
                                    label(for="image") Image 
                                    input.form-control(type="url", name="image", id="image", required, placeholder="http://xyx.com")
                                .form-group.mt-2 
                                    label(for="address") Address 
                                    textarea.form-control(name="address", id="address" cols="30" rows="6" required)
                                .form-group.mt-2
                                    input.btn.btn-success(type="submit", value="Update Contact")

        script(src="./js/update.js")